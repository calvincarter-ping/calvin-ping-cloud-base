{
  "id": "dapcv",
  "name": "dapcv",
  "pluginDescriptorRef": {
    "id": "org.sourceid.saml20.domain.LDAPUsernamePasswordCredentialValidator"
  },
  "configuration": {
    "fields": [{
        "name": "LDAP Datastore",
        "value": "${PD_DATASTORE_ID}"
      },
      {
        "name": "Search Base",
        "value": "${USER_BASE_DN}"
      },
      {
        "name": "Search Filter",
        "value": "uid=${DOLLAR}{username}"
      },
      {
        "name": "Scope of Search",
        "value": "Subtree"
      }
    ]
  },
  "attributeContract": {
    "extendedAttributes": [{
        "name": "entryUUID"
      },
      {
        "name": "cn"
      }
    ]
  }
}